// ‚ñ≥ OGX Main Script ‚Äî Scroll√©e V‚àû.5
console.log("‚öôÔ∏è THARA Booting...");

async function OGX_Report() {
  const res = await fetch("/bash/report.sh");
  console.log("üì° Report triggered", res.status);
}

window.addEventListener("load", () => {
  console.log("üåê OGX Online");
  setInterval(OGX_Report, 86400000); // every 24h
});
